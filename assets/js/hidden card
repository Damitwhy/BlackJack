function updateUI() {
  const dealerCards = document.getElementById('dealer-cards');
  const playerCards = document.getElementById('player-cards');
  dealerCards.innerHTML = '';
  playerCards.innerHTML = '';

  // Add hidden card for the first dealer's card
  const hiddenCardDiv = document.createElement('div');
  hiddenCardDiv.className = 'card hidden';
  dealerCards.appendChild(hiddenCardDiv);

  // Add remaining dealer's cards
  for (let i = 1; i < dealer.hand.length; i++) {
    const cardDiv = document.createElement('div');
    cardDiv.style = `
      background: url('assets/images/Card-images/SVG-cards/${dealer.hand[i][0]}_of_${dealer.hand[i][1]}.svg') no-repeat center / cover;
      width: 60px;
      height: 90px;
    `;
    dealerCards.appendChild(cardDiv);
  }

  // Add player's cards
  player.hand.forEach(card => {
    const cardDiv = document.createElement('div');
    cardDiv.style = `
      background: url('assets/images/Card-images/SVG-cards/${card[0]}_of_${card[1]}.svg') no-repeat center / cover;
      width: 60px;
      height: 90px;
    `;
    playerCards.appendChild(cardDiv);
  });
}
